<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView_TituloLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GESTUDENT"
        android:fontFamily="@font/chewy"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        />

    <!--
    <ImageView
        android:id="@+id/imageView_ImageLogIn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/textView_TituloLogIn"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:src="@drawable/gst" />
        -->

    <EditText
        android:id="@+id/editText_EmailLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_TituloLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/editText_PasswordLogIn"
        android:layout_below="@id/editText_EmailLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Password" />

    <TextView
        android:id="@+id/textView_RememberLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/editText_PasswordLogIn"
        android:textSize="12dp"
        android:text="¿Olvidaste tu contraseña? Pulsa Aquí"
        android:textColor="@color/btnColor"/>

    <Button
        android:id="@+id/button_LogIn"
        android:layout_below="@id/editText_PasswordLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        />

    <TextView
        android:id="@+id/textView_RegisterNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_LogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Haz click aquí si no tienes cuenta"
        android:textSize="12dp"
        android:textColor="@color/btnColor"/>

</RelativeLayout>