<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">




            <Spinner
                android:id="@+id/spinnerHome"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:layout_marginRight="8dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />




            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnFlotante"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:src="@android:drawable/ic_input_add"
                    />





        </LinearLayout>


        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/grupoBotones"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="355dp">


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAgregarApunte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/apunteicon"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAgregarExamen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/examenicon"/>
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEliminarLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/iconoeliminar"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>



</FrameLayout>